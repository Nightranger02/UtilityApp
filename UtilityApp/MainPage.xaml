<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UtilityApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Button 
                Text="To Do List" 
                Clicked="NavToDoList_Clicked"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button 
                    Text="Clock In"/>
                <Button 
                    Text="Clock Out"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button 
                    Text="Start Break"/>
                <Button 
                    Text="End Break"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
